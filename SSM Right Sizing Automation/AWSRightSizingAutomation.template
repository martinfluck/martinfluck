						{
							"name": "assertInstanceRootVolumeIsNotEncrypted",
							"action": "aws:assertAwsResourceProperty",
							"description": "Checks the EBS root volume is not encrypted.",
							"onFailure": "Abort",
							"isCritical": true,
							"inputs": {
								"Service": "ec2",
								"Api": "DescribeVolumes",
								"Filters": [
									{
										"Name": "attachment.instance-id",
										"Values": [
